<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="at.fhtw.disys.samples.ImagesController"
      prefHeight="400.0" prefWidth="600.0">
    <padding>
        <Insets topRightBottomLeft="3"/>
    </padding>

    <HBox>
        <padding>
            <Insets topRightBottomLeft="3"/>
        </padding>

        <Button text="Set Picture" onAction="#onSetPictureClicked"/>
        <Button text="Open url..." onAction="#onOpenUrlClicked"/>
        <Button text="Open file..." onAction="#onOpenFileClicked"/>
    </HBox>
    <HBox VBox.vgrow="ALWAYS">
        <ScrollPane fx:id="imageViewPane" style="-fx-background: #878F92;" HBox.hgrow="ALWAYS">
            <ImageView fx:id="imageView"/>
        </ScrollPane>
    </HBox>
</VBox>
